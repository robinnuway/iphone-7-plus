			Tele2 
			%span{:id => "internet"}
		%span{:class => "iphone_screen-lock"}
			%i{:class => "fa fa-lock"}
		%div{:class => "iphone_screen-time", :id => "time"}
		%div{:class => "iphone_screen-date", :id => "date"}
		%span{:class => "iphone_screen-battery", :id => "battery"}
			97%
			%i{:class => "fa fa-battery-full"}
		%ul{:class => "iphone_screen-text"}
			- (1..3).each do |i|
				%li
					%i{:class => "fa fa-camera"}
