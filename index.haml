	%div{:class => "iphone_silent-mode"}
		%div{:class => "iphone_silent-mode-side"}
	%ul{:class => "iphone_sound"}
		- (1..2).each do |i|
			%li
	%ul{:class => "iphone_bottom-right-speaker"}
		- (1..8).each do |i|
			%li
	%div{:class => "iphone_bottom-middle-charge"}
		- (1..2).each do |i|
			%span
	%ul{:class => "iphone_bottom-left-speaker"}
		- (1..8).each do |i|
			%li
