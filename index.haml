%div{:class => "iphone", :id => "iphone"}
	%div{:class => "iphone_camera"}
	%div{:class => "iphone_ear-speaker"}
		%div{:class => "iphone_ear-speaker-side"}
	%div{:class => "iphone_overlay"}
	%div{:class => "iphone_screen", :id => "screen"}
		%ul{:class => "iphone_screen-signal"}
			- (1..5).each do |i|
				%li
